<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@drawable/main_list_bg_selector" xmlns:app="http://schemas.android.com/apk/res-auto">

            <ImageView
                android:id="@+id/image_image_view"
                android:contentDescription="@string/image_default_content_description"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="8dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="4dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@id/image_image_view"
                android:layout_toRightOf="@+id/progress_circle"
                android:lines="1"
                android:textColor="@android:color/white"
                android:textSize="24dp"
                />
            <TextView
                android:id="@+id/progress_text_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toLeftOf="@id/image_image_view"
                android:layout_toRightOf="@+id/progress_circle"
                android:layout_below="@id/title_text_view"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                />
            <com.romanpulov.library.view.ProgressCircle
                android:id="@+id/progress_circle"
                app:min="0"
                app:max="100"
                app:progress="35"
                app:autoHide="true"
                app:textSize="12dp"
                app:arcThickness="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="6dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                />
</RelativeLayout>
