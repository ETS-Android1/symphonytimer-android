<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/control_padding_half"
            android:paddingBottom="@dimen/control_padding_half"
            android:background="@drawable/main_list_bg_selector" >

            <ImageView
                android:id="@+id/image_image_view"
                android:contentDescription="@string/image_default_content_description"
                android:layout_width="@dimen/timer_image_size"
                android:layout_height="@dimen/timer_image_size"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="@dimen/control_padding"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="@dimen/control_padding"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="@dimen/control_padding_half"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@id/image_image_view"
                android:layout_toLeftOf="@id/image_image_view"
                android:layout_toEndOf="@+id/progress_circle"
                android:layout_toRightOf="@+id/progress_circle"
                android:lines="1"
                android:textAppearance="@style/TextAppearance.ExtraLarge"
                />
            <TextView
                android:id="@+id/progress_text_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toStartOf="@id/image_image_view"
                android:layout_toLeftOf="@id/image_image_view"
                android:layout_toEndOf="@+id/progress_circle"
                android:layout_toRightOf="@+id/progress_circle"
                android:layout_below="@id/title_text_view"
                android:textAppearance="@android:style/TextAppearance.Small"
                />
            <com.romanpulov.library.view.ProgressCircle
                android:id="@+id/progress_circle"
                app:min="0"
                app:max="100"
                app:progress="35"
                app:autoHide="true"
                app:textSize="12sp"
                app:arcThickness="6dp"
                android:layout_marginLeft="@dimen/control_padding"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="@dimen/control_padding"
                android:layout_width="@dimen/timer_image_size"
                android:layout_height="@dimen/timer_image_size"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                />
</RelativeLayout>
